---
import AstroIcon from '../icons/AstroIcon.astro';
import TailwindIcon from '../icons/Tailwind.astro';
---

<nav class="fixed text-white bg-black shadow-lg shadow-cyan-900 text-2xl w-full z-20 top-0 start-0 p-1">
  <div class="flex flex-wrap items-center justify-between mx-auto p-4">
    <!-- Logo -->
    <a class="flex items-center space-x-3 rtl:space-x-reverse">
      <AstroIcon class="w-10 h-10" href="" />
      <span class="self-center text-xl text-white text-heading font-semibold">and</span>
      <TailwindIcon class="w-10 h-10"/>
    </a>

    <button 
      data-navbar-toggle="true"
      type="button" 
      class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-400 md:hidden hover:bg-neutral-secondary-soft focus:outline-none focus:ring-2 focus:ring-neutral-tertiary rounded-lg transition-all"
      aria-controls="navbar-default" 
      aria-expanded="false"
    >
      <span class="sr-only">Open main menu</span>
      <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"/>
      </svg>
    </button>

    <div class="hidden w-full md:block md:w-auto mx-10" id="navbar-default">
      <ul class="text-base font-semibold flex flex-col p-4 md:p-0 mt-4 border border-default rounded-base bg-neutral-secondary-soft md:flex-row md:space-x-8 rtl:space-x-reverse md:mt-0 md:border-0 md:bg-neutral-primary">
        <li>
          <a href="/" class="block py-2 px-3 text-heading rounded hover:transform-content hover:scale-115 hover:transition-all hover:text-white hover:underline" aria-current="page">Home</a>
        </li>
        <li>
          <a href="/docs" class="block py-2 px-3 text-heading rounded hover:transform-content hover:scale-115 hover:transition-all hover:text-white hover:underline">Docs</a>
        </li>
        <li>
          <a href="/about" class="block py-2 px-3 text-heading rounded hover:transform-content hover:scale-115 hover:transition-all hover:text-white hover:underline">About</a>
        </li>
        <li>
          <a href="/showCase" class="block py-2 px-3 text-heading rounded hover:transform-content hover:scale-115 hover:transition-all hover:text-white hover:underline">ShowCase</a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const navbarToggle = document.querySelector('[data-navbar-toggle="true"]');
    const navbarMenu = document.getElementById('navbar-default');

    if (navbarToggle && navbarMenu) {
      navbarToggle.addEventListener('click', () => {
        navbarMenu.classList.toggle('hidden');
        navbarToggle.setAttribute('aria-expanded', navbarToggle.getAttribute('aria-expanded') === 'false' ? 'true' : 'false');
      });

      // Close menu when a link is clicked
      const navLinks = navbarMenu.querySelectorAll('a');
      navLinks.forEach(link => {
        link.addEventListener('click', () => {
          navbarMenu.classList.add('hidden');
          navbarToggle.setAttribute('aria-expanded', 'false');
        });
      });
    }
  });
</script>
