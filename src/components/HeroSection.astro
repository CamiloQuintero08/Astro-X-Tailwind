---
import TailwindIcon from "../icons/Tailwind.astro";
import AstroIcon from "../icons/AstroIcon.astro";
---

<main class="flex flex-col items-center justify-center min-h-screen p-24">
  <section
    id="hero"
    class="relative text-center my-40 text-white opacity-0 translate-y-10 transition-all duration-1000 ease-out"
  >
    
    <div class="absolute inset-0 flex items-center justify-center gap-100 opacity-10 pointer-events-none">
      <AstroIcon class="w-100 h-100" />
      <TailwindIcon class="w-100 h-100" />
    </div>
    <div class="relative z-10">
      <h1 class="text-7xl text-white  font-bold text-heading mb-8">
        Welcome to <span class="text-shadow-lg text-shadow-amber-500">Astro</span> with 
        <span class="text-shadow-lg text-shadow-cyan-500">Tailwind</span>!
      </h1>

      <p class="text-4xl text-heading text-white text-shadow-lg text-shadow-black mb-12">
        Get started by editing
        <code class="bg-neutral-secondary-soft px-2 py-1 rounded">
          src/pages/index.astro
        </code>
      </p>
    </div>
  </section>
</main>
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const hero = document.getElementById("hero");

    hero.classList.remove("opacity-0", "translate-y-10");
    hero.classList.add("opacity-100", "translate-y-0");
  });
</script>
