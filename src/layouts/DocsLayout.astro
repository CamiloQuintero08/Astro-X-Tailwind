---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import TechBackgrounds from '../components/tech-backgrounds.astro';
import SideBar from '../components/SideBar.astro';
import "../styles/global.css";

interface Props {
	ShowSideBar?: boolean;
}

const { ShowSideBar = true } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/arrows-shuffle-2.svg" />
		<link rel="icon" href="/arrows-shuffle-2.ico" />
		<link rel="stylesheet" href="/styles/global.css" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro X Tailwind - Docs</title>
	</head>
	<body class="min-h-screen flex flex-col">
		<TechBackgrounds />
		
		<header class="fixed top-0 left-0 right-0 z-50">
			<Header />
		</header>

		<div class="flex flex-1 pt-16">
			{ShowSideBar && <SideBar />}
			
			<div class={ShowSideBar ? "flex-1 flex flex-col sm:ml-64" : "flex-1 flex flex-col"}>
				<main class="flex-1 p-4">
					<slot />
				</main>
				
				<Footer />
			</div>
		</div>
	</body>

	<script>
		document.addEventListener('DOMContentLoaded', () => {
			const toggleButton = document.querySelector('[data-drawer-toggle="separator-sidebar"]');
			const sidebar = document.getElementById('separator-sidebar');
			
			if (toggleButton && sidebar) {
				toggleButton.addEventListener('click', () => {
					sidebar.classList.toggle('-translate-x-full');
				});
			}
			
			const dropdownToggles = document.querySelectorAll('[data-collapse-toggle]');
			dropdownToggles.forEach(toggle => {
				toggle.addEventListener('click', () => {
					const targetId = toggle.getAttribute('aria-controls');
					const target = document.getElementById(targetId);
					if (target) {
						target.classList.toggle('hidden');
						// Rotar el Ã­cono de la flecha
						const arrow = toggle.querySelector('svg:last-child');
						if (arrow) {
							arrow.classList.toggle('rotate-180');
						}
					}
				});
			});
		});
	</script>

	<style>
		html {
			height: 100%;
		}
		
		body {
			display: flex;
			flex-direction: column;
			min-height: 100%;
		}
	</style>
</html>